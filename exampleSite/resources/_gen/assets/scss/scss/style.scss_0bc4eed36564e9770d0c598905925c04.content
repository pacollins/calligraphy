  justify-content: center;
  align-items: center;
  width: 100%;
}
.pagination__title--first::before {
  content: "««";
}
.pagination__title--previous::before {
  content: "«";
}
.pagination__title--next::after {
  content: "»";
}
.pagination__title--last::after {
  content: "»»";
