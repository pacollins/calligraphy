.pagination__label--next::after {
  content: "»";
  margin-left: 0.5rem;
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: scroll;
}

.site__container {
  width: 100%;
  max-width: 74rem;
  margin: auto;
  grid-column: span 12;
}
.site__progress {
  position: absolute;
  bottom: -5px;
  z-index: 1;
}
.site__main {
  flex-grow: 1;
  background-color: var(--color-canvas);
}

.l-grid {
  display: grid;
  box-sizing: border-box;
  width: 100%;
  max-width: 74rem;
  margin: 3rem auto;
  padding: 0 1rem;
  row-gap: 2rem;
  grid-template-columns: repeat(12, 1fr);
  grid-template-rows: min-content;
}
@media only screen and (min-width: 54rem) {
  .l-grid {
    column-gap: 2rem;
  }
}

.banner {
  position: sticky;
  top: -3rem;
  z-index: 10;
  transition: top var(--transition-base);
}
@media screen and (min-width: 50rem) {
  .banner {
    top: -13rem;
    border-width: 0;
    transition: none;
  }
}
.banner__skip {
  position: absolute;
  z-index: 2;
  padding: 0 0.5rem;
  color: var(--color-canvas);
  background-color: var(--color-text);
  transform: translateY(-110%);
  transition: transform var(--transition-base);
}
.banner__skip:focus {
  color: var(--color-canvas);
  transform: translateY(0%);
}
.banner__header {
  position: relative;
  display: flex;
  height: 3rem;
  background-color: var(--color-canvas-tint);
}
@media screen and (min-width: 50rem) {
  .banner__header {
    height: 12rem;
    background-color: unset;
  }
}
.banner__brand {
  display: flex;
  flex-grow: 1;
  align-items: center;
  margin-left: 1rem;
  margin-top: 0;
  font-family: var(--font-header);
  font-variant: small-caps;
  letter-spacing: 7px;
}
@media screen and (min-width: 50rem) {
  .banner__brand {
    flex-direction: column;
    margin: 4rem 0;
  }
}
.banner__brand a {
  display: flex;
  font-size: 1.7689rem;
  line-height: 1;
}
@media screen and (max-width: 50rem) {
  .banner__brand a span {
    margin-top: -0.25rem;
  }
}
@media screen and (min-width: 50rem) {
  .banner__brand a {
    font-size: 3.12900721rem;
  }
}
.banner__brand img {
  width: 100%;
  min-height: 100px;
}
@media screen and (max-width: 30rem) {
  .banner__name--long {
    display: none;
  }
}
@media screen and (max-width: 50rem) {
  .banner__name--long {
    letter-spacing: 0;
  }
}
.banner__name--short {
  display: none;
  letter-spacing: 0;
}
@media screen and (max-width: 30rem) {
  .banner__name--short {
    display: block;
  }
}
.banner__tagline {
  display: none;
  margin-top: 0.5rem;
  letter-spacing: 2px;
}
@media screen and (min-width: 50rem) {
  .banner__tagline {
    display: block;
  }
}
.banner__nav-toggle {
  width: 5rem;
  margin: 0;
  font-size: 0.7518796992rem;
  text-align: center;
  text-transform: uppercase;
  background-color: var(--color-ui-float);
  border: 0;
  border-radius: 0;
}
@media screen and (min-width: 50rem) {
  .banner__nav-toggle {
    display: none;
  }
}
.banner__nav ul {
  position: absolute;
  right: 0;
  z-index: -1;
  width: 100%;
  margin: unset;
  padding: unset;
  list-style: none;
  text-align: right;
  text-transform: uppercase;
  background-color: var(--color-ui-float);
  transform: translateY(-125%);
  transition: transform var(--transition-base);
}
@media screen and (min-width: 50rem) {
  .banner__nav ul {
    position: relative;
    z-index: unset;
    display: flex;
    justify-content: center;
    width: unset;
    background-color: transparent;
    border-bottom: 1px solid var(--color-ui-float);
    transform: translateY(0%);
  }
}
.banner__nav ul li {
  padding: 1rem;
  font-size: 1.33rem;
}
@media screen and (min-width: 50rem) {
  .banner__nav ul li {
    padding: 0.5rem 2rem;
    font-size: 0.7518796992rem;
  }
}
.banner__nav ul li a {
  display: block;
  width: 100%;
  padding: 0.25rem 0;
  background-position: 0 90%, 0 90%, 100% 90%;
}
@media screen and (min-width: 50rem) {
  .banner__nav ul li[aria-current=page] {
    border-bottom: 5px solid var(--color-text-link);
  }
}
.banner__nav ul li[aria-current=page] a {
  color: var(--color-text-link);
}
.banner__nav.banner__nav--open ul {
  transform: translateY(0%);
}
.banner--float {
  top: 0rem;
  transition: top var(--transition-base);
}
@media screen and (min-width: 50rem) {
  .banner--float {
    background-color: var(--color-canvas-tint);
    border-width: 5px;
  }
  .banner--float .banner__header {
    height: unset;
  }
  .banner--float .banner__brand {
    align-items: flex-start;
    margin: 0 2rem 0 0;
  }
  .banner--float .banner__brand a {
    font-size: 1.7689rem;
  }
  .banner--float .banner__brand p {
    display: none;
  }
  .banner--float .banner__name--long {
    letter-spacing: 2px;
  }
  .banner--float .banner__nav {
    height: fit-content;
  }
  .banner--float .banner__nav ul {
    border-bottom: unset;
  }
  .banner--float .banner__nav ul li {
    padding: 0 0.75rem;
  }
  .banner--float .site__container {
    display: flex;
    align-items: center;
    padding: 0.5rem;
  }
}

